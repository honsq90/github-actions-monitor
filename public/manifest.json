{
  "manifest_version": 2,
  "name": "Github Build Monitor",
  "version": "0.1.0",
  "description": "Monitors Github Action status",
  "icons": {
    "16": "icons/red_128.png",
    "32": "icons/red_128.png",
    "48": "icons/red_128.png",
    "128": "icons/red_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Github Build Monitor",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
